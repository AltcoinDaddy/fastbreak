{
  "name": "@fastbreak/strategy-service",
  "version": "1.0.0",
  "description": "User strategy configuration and management service for FastBreak",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@fastbreak/types": "workspace:*",
    "@fastbreak/shared": "workspace:*",
    "@fastbreak/database": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "redis": "^4.6.0",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "cron": "^3.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ]
  }
}